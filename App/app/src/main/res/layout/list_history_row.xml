<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="@dimen/list_select_friends_row_vertical_margin"
    android:paddingBottom="@dimen/list_select_friends_row_vertical_margin"
    android:paddingLeft="@dimen/list_select_friends_row_horizontal_margin"
    android:paddingRight="@dimen/list_select_friends_row_horizontal_margin"
    >

    <TextView
        android:id="@+id/list_history_row_location_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:textSize="@dimen/list_history_row_location_name_text_size"
        android:textColor="@color/black"
        android:text="Mong Kok"
        android:textStyle="bold"
        />

    <TextView
        android:id="@+id/list_history_row_users_names"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:textSize="@dimen/list_history_row_users_names_text_size"
        android:textColor="@color/black"
        android:text="Jacky, Kin, Alfred and 3 others"
        android:layout_below="@id/list_history_row_location_name"
        />

    <TextView
        android:id="@+id/list_history_row_created_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:textSize="@dimen/list_History_row_created_date_text_size"
        android:textColor="@color/black"
        android:text="2 days ago"
        />

</RelativeLayout>